{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 3,
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "transient_prompt": {
            "background": "transparent",
            "foreground": "#ffffff",
            "template": "{{ .Shell }}> "
          }
        },
        {
          "secondary_prompt": {
            "background": "transparent",
            "foreground": "#ffffff",
            "template": "{{ .Shell }} "
          }
        },
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#ebcc34",
          "template": "{{.Context}} ",
          "properties": {
            "parse_kubeconfig": true,
            "context_aliases": {
              "default/api-ocp-dev-byu-edu:6443/rbulkley@byu.edu": "ocp-dev",
              "default/api-ocp-byu-edu:6443/rbulkley@byu.edu": "ocp-prd",
              "default/api-osv-prd-byu-edu:6443/rbulkley@byu.edu": "osv-prd",
              "default/api-osv-byuh-edu:6443/rbulkley@byuh.edu": "osv-byuh"
            }
          }
        },
        {
          "foreground": "#98C379",
          "style": "plain",
          "template": "\u279c",
          "type": "text"
        },
        {
          "style": "plain",
          "template": " {{.PWD}}",
          "type": "path",
          "foreground": "#56B6C2",
          "properties": {
            "max_depth": 3,
            "style": "folder"
          }
        },
        {
          "foreground": "#D0666F",
          "properties": {
            "branch_icon": ""
          },
          "style": "plain",
          "template": "<#5FAAE8></> {{ .HEAD }}<#5FAAE8></>",
          "type": "git"
        },
        {
          "foreground": "#BF616A",
          "style": "plain",
          "template": " \u2717",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ]
}
