{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 3,
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "transient_prompt": {
            "background": "transparent",
            "foreground": "#ffffff",
            "template": "{{ .Shell }}> "
          }
        },
        {
          "secondary_prompt": {
            "background": "transparent",
            "foreground": "#ffffff",
            "template": "{{ .Shell }} "
          }
        },
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#ebcc34",
          "template": "[{{ .Context }}] ",
          "properties": {
            "parse_kubeconfig": true,
            "context_aliases": {
              "default/api-ocp-dev-byu-edu:6443/rbulkley@byu.edu": "ocp-dev",
              "default/api-ocp-byu-edu:6443/rbulkley@byu.edu": "ocp-prd",
              "default/api-osv-prd-byu-edu:6443/rbulkley@byu.edu": "osv-prd",
              "default/api-osv-byuh-edu:6443/rbulkley@byuh.edu": "osv-byuh"
            }
          }
        },
        {
          "type": "path",
          "style": "plain",
          "options": {
            "style": "agnoster_short",
            "max_depth": 2,
            "folder_separator_icon": "/"
          },
          "template": "{{- if .Segments.Contains \"Git\" -}}{{- if .Segments.Git.Dir -}}{{- $sep := \"/\" -}}{{- $repo := (base .Segments.Git.Dir | trunc 8) -}}{{- $rel := replace \"\\\\\" \"/\" .Segments.Git.RelativeDir -}}{{- $rel = trimPrefix \"/\" $rel -}}{{- if or (eq $rel \"\") (eq $rel \".\") -}}{{ $repo }}{{- else -}}{{- $parts := splitList \"/\" $rel -}}{{- $leaf := (last $parts | trunc 8) -}}{{- if gt (len $parts) 1 -}}{{ $repo }}{{ $sep }}â€¦{{ $sep }}{{ $leaf }}{{- else -}}{{ $repo }}{{ $sep }}{{ $leaf }}{{- end -}}{{- end -}}{{- else -}}{{ .Path }}{{- end -}}{{- else -}}{{ .Path }}{{- end -}}"
        },
        {
          "foreground": "#D0666F",
          "properties": {
            "branch_icon": ""
          },
          "style": "plain",
          "template": "<#5FAAE8></> {{ .HEAD }}<#5FAAE8></>",
          "type": "git"
        },
        {
          "foreground": "#BF616A",
          "style": "plain",
          "template": "\u2717",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ]
}
