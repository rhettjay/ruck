theme = GruvboxDark
font-family = "Hack Nerd Font Mono"

keybind = super+i=new_split:right
keybind = super+right_bracket=goto_split:next
keybind = super+left_bracket=goto_split:previous
keybind = super+shift+i>+=resize_split:right,10
keybind = super+shift+i>-=resize_split:left,10
keybind = super+shift+i>.=equalize_splits
keybind = super+alt+i=inspector:toggle
